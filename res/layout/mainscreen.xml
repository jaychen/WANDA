<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/green"
	android:gravity="center_horizontal">
	
	<ScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_marginBottom="50dip" 
		android:id="@+id/RelativeLayout" 
		android:visibility="visible">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" 
				android:layout_height="wrap_content" 
				android:background="@color/white"
				android:id="@+id/LinearLayout01" 
				android:layout_width="wrap_content" 
				android:gravity="center_horizontal">
			<ImageView 
				android:id="@+id/ImageView01" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:src="@drawable/wandalogo" 
				android:scaleType="center" 
				android:padding="5px" 
				android:scrollbarAlwaysDrawVerticalTrack="false" 
				android:scrollbarAlwaysDrawHorizontalTrack="false">
			</ImageView>
		<LinearLayout 
			android:id="@+id/LinearLayout02" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView 
				android:id="@+id/version" 
				android:gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="@string/about_version" 
				android:textSize="@dimen/twotwo_sp" 
				android:textColor="@color/light_blue">
			</TextView>
			<TextView 
				android:id="@+id/TextView02" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="  ">
			</TextView>
			<TextView 
				android:id="@+id/version" 
				android:gravity="center" 
				android:layout_width="wrap_content" 
				android:paddingBottom="10px" 
				android:layout_height="wrap_content" 
				android:text="@string/version"
				android:textSize="@dimen/twotwo_sp" 
				android:textColor="@color/light_blue">
			</TextView>
		</LinearLayout>
			<TextView 
				android:id="@+id/TextView01" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:text="@string/aboutusheader"
				android:textStyle="bold" 
				android:textSize="@dimen/twofour_sp" 
				android:textColor="@color/white">
			</TextView>
			<TextView
				android:id="@+id/aboutus1" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:textSize="@dimen/twozero_sp" 
				android:paddingLeft="10px" 
				android:paddingRight="10px" 
				android:paddingTop="10px" 
				android:text="@string/aboutus1" 
				android:gravity="left" 
				android:textColor="@color/light_blue">
			</TextView>
			<TextView
				android:id="@+id/aboutus2" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:textSize="@dimen/twozero_sp" 
				android:paddingLeft="10px" 
				android:paddingRight="10px" 
				android:paddingTop="10px" 
				android:text="@string/aboutus2" 
				android:gravity="left" 
				android:textColor="@color/light_blue">
			</TextView>
			<TextView
				android:id="@+id/aboutus2_5"
				android:autoLink="web|email" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:textSize="@dimen/twozero_sp" 
				android:gravity="center_horizontal" 
				android:paddingLeft="10px" 
				android:paddingRight="10px" 
				android:paddingTop="10px" 
				android:text="@string/aboutus2_5">
			</TextView>
			<TextView
				android:id="@+id/aboutus3" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:textSize="@dimen/twozero_sp" 
				android:paddingLeft="10px" 
				android:paddingRight="10px" 
				android:paddingTop="10px" 
				android:gravity="left" 
				android:text="@string/aboutus3" 
				android:textColor="@color/light_blue">
			</TextView>
			<TextView
				android:id="@+id/aboutus4" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:textSize="@dimen/twozero_sp" 
				android:gravity="center_horizontal" 
				android:paddingLeft="10px" 
				android:paddingRight="10px" 
				android:paddingTop="10px" 
				android:text="@string/aboutus4" 
				android:textStyle="bold" 
				android:textColor="@color/light_blue">
			</TextView>
			<TextView
				android:id="@+id/credits" 
				android:gravity="center" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="@string/credits" 
				android:textSize="@dimen/twozero_sp" 
				android:paddingLeft="10px" 
				android:paddingRight="10px" 
				android:paddingBottom="10px" 
				android:textColor="@color/light_blue">
			</TextView>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout 
		android:id="@+id/RelativeLayout01"
		android:layout_marginTop="-50dip" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/white">
		<Button 
			android:id="@+id/Button01" 
			android:layout_height="wrap_content"
			android:text="@string/done" 
			android:visibility="visible" 
			android:clickable="true"
			android:focusable="true" 
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content" >
		</Button>
	</RelativeLayout>
</LinearLayout>
