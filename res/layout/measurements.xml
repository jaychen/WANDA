<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/BPView"
				android:textSize="30px" android:text="Blood Pressure" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/scaleView"
				android:textSize="30px" android:text="Weight Scale"
				android:layout_marginTop="30px" />


		</LinearLayout>
	</ScrollView>

</LinearLayout>
